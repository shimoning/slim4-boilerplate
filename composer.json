{
    "name": "shimoning/slim4-boilerplate",
    "description": "A Boilerplate of Slim Framework 4",
    "keywords": [
        "slim",
        "boilerplate",
        "dotenv",
        "csrf",
        "pdo",
        "twig",
        "migration",
        "seeder"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Shimon Haga",
            "email": "shimon.haga@shimoning.com",
            "homepage": "https://shimoning.com/"
        }
    ],
    "require": {
        "php": "^8.1",
        "ext-json": "*",
        "monolog/monolog": "^2.8",
        "php-di/php-di": "^6.4",
        "robmorgan/phinx": "^0.13.1",
        "slim/csrf": "^1.3",
        "slim/flash": "^0.4.0",
        "slim/psr7": "^1.5",
        "slim/slim": "^4.10",
        "slim/twig-view": "^3.3",
        "vlucas/phpdotenv": "^5.5"
    },
    "require-dev": {
        "jangregor/phpstan-prophecy": "^1.0.0",
        "phpspec/prophecy-phpunit": "^2.0",
        "phpstan/extension-installer": "^1.2.0",
        "phpstan/phpstan": "^1.8",
        "phpunit/phpunit": "^9.5.26",
        "squizlabs/php_codesniffer": "^3.7"
    },
    "config": {
        "allow-plugins": {
            "phpstan/extension-installer": true
        },
        "process-timeout": 0,
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "migrate:create": "vendor/bin/phinx create",
        "migrate:run": "vendor/bin/phinx migrate",
        "migrate:rollback": "vendor/bin/phinx rollback",
        "seed:create": "vendor/bin/phinx seed:create",
        "seed:run": "vendor/bin/phinx seed:run",
        "test": "phpunit"
    }
}
